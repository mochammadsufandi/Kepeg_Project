generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model Pegawai {
  id Int @id @default(autoincrement())
  NIP String @unique 
  NRP String @unique
  nama String
  gender String @default("Unknown")
  tempatLahir String?
  tanggalLahir DateTime?
  originalRank String?
  numericRank Int?
  pangkatSejak DateTime?
  jabatanSejak DateTime?
  PNSSejak DateTime?
  pendidikanTerakhir String?
  promotionYAD DateTime?
  jaksa Boolean?
  jaksaSejak DateTime?
  keterangan String?
  promotionChecking Boolean?
  marker Boolean @default(false)
  keteranganTambahan String?
  namaJabatan String?
  jabatanId Int?
  jabatan Jabatan? @relation(fields: [jabatanId], references: [id], onDelete: SetNull, onUpdate: Cascade)
  unitId Int?
  unitKerja UnitKerja? @relation(fields: [unitId], references: [id], onDelete: SetNull, onUpdate: Cascade)
}

model UnitKerja {
  id Int @id @default(autoincrement())
  nama String @unique
  Pegawai Pegawai[]
}

model Jabatan {
  id Int @id @default(autoincrement())
  nama String @unique
  Pegawai Pegawai[]
}